---
import Featured from '@/components/Featured.astro';
import Separator from '@/components/Separator.astro';
import ShortAbout from '@/components/ShortAbout.astro';
import BlogCard from '@/components/BlogCard.astro';
import { getPost } from '@/pages/blog/index.astro';
import Layout from '@/layouts/Layout.astro';
import ProjectCard from '@/components/ProjectCard.astro';
import { getProject } from './projects/index.astro';
import { home } from '@/config/page';
import About from '@/components/About.astro'
import Skills from '@/components/Skills.astro'
---

<Layout {...home}>
	<ShortAbout name='Patrick Vreeburg' />
	<Separator />
	<Featured>
		<ProjectCard project={getProject("Azura")} />
		<ProjectCard project={getProject("Melvin")} />
		<BlogCard post={getPost("Smoke Simulation")} />
	</Featured>
	<Separator />
	<About />
	<Separator />
	<Skills />
</Layout>